entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "redux1"
mode = "sequential"
author = 46569891

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd redux1 && npm run dev"

[[workflows.workflow]]
name = "redux2"
mode = "sequential"
author = 46569891

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd redux2 && npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Dev Server"

[[workflows.workflow]]
name = "React Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd redux2 && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5173
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
